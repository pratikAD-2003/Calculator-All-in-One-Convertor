<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context = ".MainActivity"
    android:id="@+id/drawerLayout">

    <LinearLayout
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:id="@+id/linearLayout"
        android:layout_width="@dimen/_311sdp"
        android:layout_height="@dimen/_310sdp"
        android:orientation="vertical"
        android:gravity="bottom|center_horizontal"
        android:foregroundGravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/Solving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/_5sdp"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="@dimen/_40ssp"
            app:layout_constraintBottom_toTopOf="@+id/finalAns"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:text="@tools:sample/cities" />

        <TextView
            android:id="@+id/finalAns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/_5sdp"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:paddingBottom="@dimen/_10sdp"
            android:textSize="@dimen/_25ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:text="@tools:sample/cities" />


        <LinearLayout
            android:layout_width="@dimen/_310sdp"
            android:layout_height="@dimen/_62sdp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/allClear"
                android:layout_width="@dimen/_77sdp"
                android:layout_height="@dimen/_62sdp"
                android:background="@drawable/cal_btn"
                android:gravity="center"
                android:text="AC"
                android:textColor="#FF5722"
                android:textSize="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/button2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.893" />

            <Button
                android:id="@+id/oneDelete"
                android:layout_width="@dimen/_77sdp"
                android:layout_height="@dimen/_62sdp"
                android:background="@drawable/cal_btn"
                android:gravity="center"
                android:text="⌫"
                android:textColor="#FFEB3B"
                android:textSize="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.33"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.894" />

            <Button
                android:id="@+id/percentage"
                android:layout_width="@dimen/_77sdp"
                android:layout_height="@dimen/_62sdp"
                android:background="@drawable/cal_btn"
                android:gravity="center"
                android:text="%"
                android:textColor="#FFEB3B"
                android:textSize="50dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/button3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.66"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/divide"
                android:layout_width="@dimen/_77sdp"
                android:layout_height="@dimen/_62sdp"
                android:background="@drawable/cal_btn"
                android:gravity="center"
                android:text="÷"
                android:textColor="#FFEB3B"
                android:textSize="50dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_310sdp"
            android:layout_height="@dimen/_62sdp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/btn7"
                android:layout_width="@dimen/_77sdp"
                android:layout_height="@dimen/_62sdp"
                android:background="@drawable/cal_btn"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="50dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/button3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.66"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="@dimen/_77sdp"
                android:layout_height="@dimen/_62sdp"
                android:background="@drawable/cal_btn"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="50dp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="@dimen/_77sdp"
                android:layout_height="@dimen/_62sdp"
                android:background="@drawable/cal_btn"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="50dp" />

            <Button
                android:id="@+id/multiply"
                android:layout_width="@dimen/_77sdp"
                android:layout_height="@dimen/_62sdp"
                android:background="@drawable/cal_btn"
                android:gravity="center"
                android:text="×"
                android:textColor="#FFEB3B"
                android:textSize="50dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_310sdp"
            android:layout_height="@dimen/_62sdp"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/btn4"
                android:layout_width="@dimen/_77sdp"
                android:layout_height="@dimen/_62sdp"
                android:background="@drawable/cal_btn"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="50dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/button3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.66"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="@dimen/_77sdp"
                android:layout_height="@dimen/_62sdp"
                android:background="@drawable/cal_btn"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="50dp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="@dimen/_77sdp"
                android:layout_height="@dimen/_62sdp"
                android:background="@drawable/cal_btn"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="50dp" />

            <Button
                android:id="@+id/subtract"
                android:layout_width="@dimen/_77sdp"
                android:layout_height="@dimen/_62sdp"
                android:background="@drawable/cal_btn"
                android:gravity="center"
                android:text="-"
                android:textColor="#FFEB3B"
                android:textSize="50dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_310sdp"
            android:layout_height="@dimen/_62sdp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/btn1"
                android:layout_width="@dimen/_77sdp"
                android:layout_height="@dimen/_62sdp"
                android:background="@drawable/cal_btn"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="50dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/button3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.66"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="@dimen/_77sdp"
                android:layout_height="@dimen/_62sdp"
                android:background="@drawable/cal_btn"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.33"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.894" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="@dimen/_77sdp"
                android:layout_height="@dimen/_62sdp"
                android:background="@drawable/cal_btn"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="50dp" />

            <Button
                android:id="@+id/addition"
                android:layout_width="@dimen/_77sdp"
                android:layout_height="@dimen/_62sdp"
                android:background="@drawable/cal_btn"
                android:gravity="center"
                android:text="+"
                android:textColor="#FFEB3B"
                android:textSize="50dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_310sdp"
            android:layout_height="@dimen/_62sdp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/decimal"
                android:layout_width="@dimen/_77sdp"
                android:layout_height="@dimen/_62sdp"
                android:background="@drawable/cal_btn"
                android:gravity="center"
                android:text="."
                android:textColor="@color/white"
                android:textSize="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/button2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.893" />

            <Button
                android:id="@+id/zero"
                android:layout_width="@dimen/_77sdp"
                android:layout_height="@dimen/_62sdp"
                android:background="@drawable/cal_btn"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.33"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.894" />

            <Button
                android:id="@+id/doubleZero"
                android:layout_width="@dimen/_77sdp"
                android:layout_height="@dimen/_62sdp"
                android:background="@drawable/cal_btn"
                android:gravity="center"
                android:text="00"
                android:textColor="@color/white"
                android:textSize="50dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/button3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.66"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/equal"
                android:layout_width="@dimen/_77sdp"
                android:layout_height="@dimen/_62sdp"
                android:background="@drawable/cal_btn"
                android:gravity="center"
                android:text="="
                android:textColor="#FF5722"
                android:textSize="50dp" />

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="match_parent"
        android:id="@+id/navigationDrawer"
        app:itemIconTint="@color/white"
        android:fitsSystemWindows="true"
        android:layout_gravity="start"
        android:theme="@style/NewFontStyle"
        app:itemTextAppearance="@style/NewFontStyle"
        android:background="#222222"
        app:itemTextColor="@color/white"
        app:headerLayout="@layout/header_file"
        app:menu="@menu/items"/>

</androidx.drawerlayout.widget.DrawerLayout>